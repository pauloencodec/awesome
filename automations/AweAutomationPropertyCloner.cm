package custom.awesome.automations;

//compares new set of AweSnappers with the previous set and clones properties of things it deems the same
public class AweAutomationPropertyCloner {

    public AweAutomationBoxToModelMapItem{} oldGen;

    public constructor(AweAutomationBoxToModelMapItem{} oldGen) {
        this.oldGen = oldGen;
    }   


    extend private AweObject bestMatch(AweSnapper newOne) {
        //80% threshold? 
        var threshold = 0.8;
        for(oldOne in oldGen) {
            var likelihood = compare(oldOne, newOne);
            if(likelihood >= threshold) {
                return oldOne.model;
            }
        }
        //poor thing found no match
        return newOne.mainModel();
    }

    //returns the percentage likelihood of being the same thing. 1 = 100%
    extend private double compare(AweAutomationBoxToModelMapItem oldOne, AweSnapper newOne) {

        if(oldOne.model.?class != newOne.mainModel().?class) return 0;

        var newBox = newOne.bound();

        //preventing division by 0 down the road
        var newBoxVolume = newBox.volume();
        if(newBoxVolume == 0) {
            return 0;
        }

        var oldBox = oldOne.bound;
        var intersectionBox = oldBox * newBox;
        var sharedVolumePercentage = intersectionBox.volume() / newBox.volume();
        return sharedVolumePercentage;
    }
}