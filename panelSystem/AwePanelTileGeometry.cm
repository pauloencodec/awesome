package custom.awesome.panelSystem;

public class AwePanelTileGeometry extends AweGeometry {
    
    private AwePanelTileModel model;

    public constructor(AwePanelTileModel model) {
        this.model = model;
    }   

    public Primitive3D medium3D() {
        
        box volume(base, model.z, model.height + model.z);
        Box3D prim(volume.shrunken(1inch/8));
        prim.setMaterial(plainRandomColorMaterial3D(100));
        prim.orientBy(model.insideBottomLine.offset(1inch/8));
        return prim;
    }

    public Primitive3D super3D() {
        double chamfer = 0.001;

        AwePath2D profile();
        profile.go(-chamfer, chamfer).up(model.thickness - chamfer*2).go(chamfer, chamfer);

        rect pathRect((0,0), (model.insideBottomLine.length, model.height));
        pathRect.shrink(1inch/8);

        AwePath2D path(pathRect.p0);
        path.right(pathRect.w).up(pathRect.d).left(pathRect.w).down(pathRect.d);

        Primitive3D frame = extrudePathAlongPath(profile, path);
        Primitive3D core = path.toPrimitive(model.thickness);
        Instance3D tile([Primitive3D: frame, core]);

        tile.setMaterial(plainRandomColorMaterial3D(100));
        tile.standUp();
        tile.orientBy(model.insideBottomLine);
        tile.move((0,0,model.z));
    
        return tile;
    }

    extend private rect base() {
        rect base(
            (0,-model.thickness),
            (model.insideBottomLine.length, 0)
        );
        return base;
    }

    public Graph graph() {
        GRect g(base);
        g.orientBy(model.insideBottomLine);
        return g;
    }
}

{
    AwePanelTileModel m();
    m.insideBottomLine = line2D((0,0),(1,1));
    m.thickness = 1inch;
    m.height = 36inch;
    test(AwePanelTileGeometry(m));
}