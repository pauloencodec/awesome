package $dynamicPackageName;

public class AweReactiveProduct extends AweProduct : abstract, inherit constructors {

    private AweReactivePropBag props : public readable;
    private Snapper owner : public readable;

    private function(str key, Object newValue, Object oldValue, Snapper controller) onChange : public readable;

    public constructor(Object model, Snapper owner, function(str key, Object newValue, Object oldValue, Snapper controller) onChange) {
        super(model);
        this.owner = owner;
        this.props = new AweReactivePropBag(this, this.getAweProps(), function property_changed);
        this.onChange = onChange;
    } 

    extend public AweReactiveProp[] getAweProps() : abstract { } 
    extend public void initProps() : abstract { } 

    final public void propertyChanged(str key, Object newValue, Object oldValue) { 
        this.propertyChangedCore(..);
        if (this.onChange and this.owner) { 
            this.onChange(key, newValue, oldValue, this.owner);
        }
    }

    extend public void propertyChangedCore(str key, Object newValue, Object oldValue) { 

    }

}

private void property_changed(str key, Object newValue, Object oldValue, Snapper snapper) {
    if (snapper as AweReactiveProduct) { 
        snapper.propertyChanged(key, newValue, oldValue);
    }
}