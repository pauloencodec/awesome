package custom.awesome.structures;

public class RegionEdge {
    public RegionNode a;
    public RegionNode b;

    public double _cost;
    public double weight;

    public constructor( RegionNode a, RegionNode b ) {
        this.a = a;
        this.b = b;
        a.edges << this;
        b.edges << this;

        // for now just use the distance as the cost
        this._cost = a.p.distance(b.p);
        this.weight = calcWeight();
    }

    extend public double cost() {
        // return _cost;
        return _cost * weight;
    }

    extend private double calcWeight() {
        if ( | a.p.z - b.p.z | < 1inch ) return 0.95;
        return 1.0;
    }

    extend public RegionNode other( RegionNode me ) {
        return me == a ? b : a;
    }

    extend public Primitive3D get3D() {
        if ( hasDrawn.contains(this) ) return null;
        hasDrawn << this;
        ClosedCylinder3D line( a.p, b.p, 0.125inch, doubleSided=true );
        line.setMaterial( lightBlueTransparencyMaterial3D );
        return line;
    }
}