package custom.awesome.electrical;

public class AweElectricalPoint {
    public point position;
    public vector direction;

    private bool hasDirection = false;

    public constructor( point p, Vector a=null ) {
        if ( a ) {
            this.hasDirection = true;
            this.direction = a.v;
        }
        this.position = p;
    }   

    extend public void transform( Snapper s ) {
        this.position = s.toSpace( this.position );
        if ( hasDirection ) {
            this.direction.rotateZ(s.rot.yaw);
        }
    }

    extend public bool canGoTo( point p ) {
        if ( !hasDirection ) return true;
        // pln( "(" # position.x # ", " # position.z # ") -> (" # p.x # ", " # p.z # ") : " # direction );
        
        line l(position, p);

        // this method is more numerical stable as the angle approaches 0, which can happen here
        /*
                    v1 x v2       (v1 crossed v2)
            atan2( --------- )
                    v1 . v2       (v1 DOT v2)
         */

        var angle = atan( l.direction.crossed(direction).length, l.direction*direction );
        // pln(#angle);
        // DO NOT USE the .angle(..) method here, its unreliable and sometimes returns NAN
        // return l.direction.normalized().angle(direction.normalized()) <= 90deg;
        return angle <= 90deg;
    }
}