package custom.awesome.storage;

public enum aweStorageChassisSide : field access {
    front;
    back;
    left;
    right;
    top;
    bottom;
}

public class AweStorageChassis3D extends Awe3D {
    private str->Rect3D[] index();
    private Rect3D[] allFaces();
    public box localBound;
    private box spaceLeft;

    public constructor(box localBound) {
        this.localBound = localBound;
        this.spaceLeft = localBound;
    }   

    extend private void addToIndex(str name, Rect3D r) {
        if(!index.get(name)) {
            index.put(name, [Rect3D: r]);
        }
        else {
            index.get(name) << r;
        }
    }

    extend private void addToIndex(str name, Rect3D[] rs) {
        for(r in rs) {
            addToIndex(name, r);
        }
    }
    
    extend private AweStorageChassis3D addTop(double thickness=0.75inch) {
        box laminate((spaceLeft.p0.x, spaceLeft.p0.y, spaceLeft.p1.z-thickness), spaceLeft.p1);
        box temp = spaceLeft.moved(point(0, 0, -thickness));
        spaceLeft = spaceLeft * temp;

        AweBox3D prim(laminate, randomColorLWMaterial());
        addToIndex("front", prim.front);
        addToIndex("internal", prim.bottom);
        allFaces += prim.allFaces;
        
        this << prim;
        return this;
    }

    extend private AweStorageChassis3D addBottom(double thickness=0.75inch) {
        box laminate(spaceLeft.p0, (spaceLeft.p1.x, spaceLeft.p1.y, spaceLeft.p0.z + thickness));
        box temp = spaceLeft.moved(point(0, 0, thickness));
        spaceLeft = spaceLeft * temp;

        AweBox3D prim(laminate, randomColorLWMaterial());
        addToIndex("front", prim.front);
        addToIndex("internal", prim.top);
        allFaces += prim.allFaces;
        
        this << prim;
        return this;
    }

    extend private AweStorageChassis3D addLeft(double thickness=0.75inch) {
        box laminate(spaceLeft.p0, (spaceLeft.p0.x + thickness, spaceLeft.p1.y, spaceLeft.p1.z));
        box temp = spaceLeft.moved(point(thickness, 0, 0));
        spaceLeft = spaceLeft * temp;

        AweBox3D prim(laminate, randomColorLWMaterial());
        addToIndex("front", prim.front);
        addToIndex("internal", prim.right);
        allFaces += prim.allFaces;
        
        this << prim;
        return this;
    }

    extend private AweStorageChassis3D addRight(double thickness=0.75inch) {
        box laminate((spaceLeft.p1.x - thickness, spaceLeft.p0.y, spaceLeft.p0.z), spaceLeft.p1);
        box temp = spaceLeft.moved(point(-thickness, 0, 0));
        spaceLeft = spaceLeft * temp;

        AweBox3D prim(laminate, randomColorLWMaterial());
        addToIndex("front", prim.front);
        addToIndex("internal", prim.left);
        allFaces += prim.allFaces;
        
        this << prim;
        return this;
    }

    extend private AweStorageChassis3D addBack(double thickness=0.75inch) {
        box laminate(spaceLeft.p0 + (0, spaceLeft.p1.y - thickness, 0), spaceLeft.p1);
        box temp = spaceLeft.moved(point(0, -thickness, 0));
        spaceLeft = spaceLeft * temp;

        AweBox3D prim(laminate, randomColorLWMaterial());
        addToIndex("internal", prim.front);
        allFaces += prim.allFaces;
        
        this << prim;
        return this;
    }

    extend private AweStorageChassis3D addFront(double thickness=0.75inch) {
        box laminate(spaceLeft.p0, spaceLeft.p0 + (spaceLeft.p1.x, thickness, spaceLeft.p1.z));
        box temp = spaceLeft.moved(point(0, -thickness, 0));
        spaceLeft = spaceLeft * temp;

        AweBox3D prim(laminate, randomColorLWMaterial());
        addToIndex("front", prim.front);
        allFaces += prim.allFaces;
        
        this << prim;
        return this;
    }

    extend public void setMaterial(str indexKey, Material3D material) {
        var faces = index.get(indexKey);
        for(f in faces) {
            f.setMaterial(material);
        }
    }

    public void setMaterial(Material3D material) {
        for(f in allFaces) {
            f.setMaterial(material);
        }
    }
}

{
    AweStorageChassis3D chassis(box((0,0,0),(24inch,18inch,12inch)));
    chassis.addTop().addLeft().addRight().addBottom().addBack();

    chassis.setMaterial(randomColorLWMaterial());
    chassis.setMaterial("internal", randomColorLWMaterial());
    chassis.setMaterial("front", randomColorLWMaterial());
    test(chassis);
}